<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Edit_Movie">


    <TextView
        android:id="@+id/movie_data"
        android:layout_width="336dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/hh"
        android:gravity="center|start"
        android:paddingRight="20dp"
        android:text="Enter your Movie information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/white"
            android:onClick="ChooseVideo"/>


        <EditText
            android:id="@+id/movie_id"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_shap"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="ID"
            android:textColor="@color/black"
            android:textColorHint="#AAA6A6"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/movie_name"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/edit_shap"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Name"
            android:textColor="@color/black"
            android:textColorHint="#AAA6A6"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/movie_description"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_shap"
            android:backgroundTint="@color/white"
            android:textColorHint="#AAA6A6"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="Description"
            android:imeOptions="actionNext"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/movie_rate"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_shap"
            android:backgroundTint="@color/white"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:hint="Rate"
            android:textColor="@color/black"
            android:textColorHint="#AAA6A6"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/movie_add"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_shap"
            android:text="Add"
            android:onClick="done_edit"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textSize="20sp"
            tools:ignore="OnClick" />

    </LinearLayout>

</LinearLayout>